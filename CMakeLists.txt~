cmake_minimum_required(VERSION 2.8.3)
project(roverbot)

## Find catkin and any catkin packages
find_package(catkin REQUIRED COMPONENTS roscpp rospy std_msgs genmsg tf laser_geometry geometry_msgs sensor_msgs)

## Generate added messages and services
generate_messages(DEPENDENCIES std_msgs)

## Declare a catkin package
catkin_package(
  INCLUDE_DIRS include
  LIBRARIES ${PROJECT_NAME}
  CATKIN_DEPENDS geometry_msgs roscpp sensor_msgs
)

## Build talker and listener
include_directories(include ${catkin_INCLUDE_DIRS} ${Eigen_INCLUDE_DIRS} ${EIGEN3_INCLUDE_DIR})

add_executable(talkerLaser roverbot_comunication/src/talkerLaser.cpp)
target_link_libraries(talkerLaser ${catkin_LIBRARIES})

add_executable(listenerLaser roverbot_comunication/src/listenerLaser.cpp)
target_link_libraries(listenerLaser ${catkin_LIBRARIES})



add_executable(teleop_node roverbot_control/src/teleop_node.cpp)
target_link_libraries(teleop_node ${PROJECT_NAME} ${catkin_LIBRARIES})
set_target_properties(teleop_node
  PROPERTIES OUTPUT_NAME teleop_node PREFIX "")

install(TARGETS ${PROJECT_NAME} teleop_node
  ARCHIVE DESTINATION ${CATKIN_PACKAGE_LIB_DESTINATION}
  LIBRARY DESTINATION ${CATKIN_PACKAGE_LIB_DESTINATION}
  RUNTIME DESTINATION ${CATKIN_PACKAGE_BIN_DESTINATION})

install(DIRECTORY include/${PROJECT_NAME}/
  DESTINATION ${CATKIN_PACKAGE_INCLUDE_DESTINATION})

install(DIRECTORY launch config
  DESTINATION ${CATKIN_PACKAGE_SHARE_DESTINATION})
